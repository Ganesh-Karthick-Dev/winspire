/* Company Page Styles */

.heroSection {
    position: relative;
    min-height: 100vh;
    width: 100%;
    overflow: hidden;
}

/* Frosty Card - starts full screen */
.frostyCard {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(145deg,
            rgba(255, 255, 255, 0.18) 0%,
            rgba(255, 255, 255, 0.08) 50%,
            rgba(255, 255, 255, 0.14) 100%);
    backdrop-filter: blur(20px) saturate(130%);
    -webkit-backdrop-filter: blur(20px) saturate(130%);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
    z-index: 5;
    pointer-events: none;
}

/* Hero Title - Inside frosty card */
.heroTitle {
    position: absolute;
    bottom: 3%;
    left: 0;
    right: 0;
    text-align: center;
    font-size: clamp(4rem, 14vw, 10rem);
    font-weight: 800;
    line-height: 0.9;
    letter-spacing: -0.04em;
    color: #ffffff;
    margin: 0;
    z-index: 15;
    text-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
}

/* Tagline - appears inside frosty card after grid forms */
.tagline {
    position: absolute;
    top: 58%;
    left: 35%;
    right: 35%;
    text-align: center;
    z-index: 15;
    opacity: 0;
    padding: 0 1rem;
}

.taglineHeading {
    font-size: clamp(1.2rem, 3vw, 2rem);
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 0.5rem 0;
    text-shadow: 0 2px 15px rgba(0, 0, 0, 0.15);
}

.taglineSubtext {
    font-size: clamp(0.9rem, 2vw, 1.3rem);
    font-weight: 500;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
    letter-spacing: 0.02em;
}

/* Grid Images - Fully contained in viewport */
.gridImage {
    position: absolute;
    width: 15%;
    height: 25%;
    border-radius: 16px;
    overflow: hidden;
    z-index: 8;
    box-shadow:
        0 15px 40px rgba(0, 0, 0, 0.2),
        0 5px 15px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transition: transform 0.3s ease;
}

.gridImage:hover {
    transform: scale(1.03);
}

/* Images positioned adjacent to frosty card */

.topLeft {
    top: 38%;
    right: 62%;
}

.topRight {
    top: 38%;
    left: 62%;
}

.bottomLeft {
    top: 65%;
    right: 62%;
}

.bottomRight {
    top: 65%;
    left: 62%;
}

/* Responsive */
@media (max-width: 1200px) {
    .gridImage {
        width: 18%;
        height: 22%;
    }
}

@media (max-width: 768px) {
    .heroTitle {
        font-size: clamp(2.5rem, 12vw, 5rem);
        bottom: 2rem;
    }

    .gridImage {
        width: 25%;
        height: 20%;
    }

    .topLeft,
    .topRight {
        top: 22%;
    }

    .bottomLeft,
    .bottomRight {
        top: 52%;
    }
}